def recoverTree(root: TreeNode) -> None:
    prev = first = second = None
    def inorder(node):
        nonlocal prev, first, second
        if not node:
            return
        inorder(node.left)
        if prev and prev.val > node.val:
            if not first:
                first = prev
            second = node
        prev = node
        inorder(node.right)
    inorder(root)
    first.val, second.val = second.val, first.val
